{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Current JS File (no tests)",
      "program": "${file}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Current JS File (with tests)",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "${file}"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
